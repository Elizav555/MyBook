@model MyBook.Models.UserProfileViewModel

<section class="user_page_lower">
    <div class="sub_table">
        <div class="sub_table_wrapper">
            <table>
                <tr class="title_tr">
                    <td>Название книги</td>
                    <td>Дата скачивания</td>
                    <td>Стоимость</td>
                </tr>
                @foreach (var history in Model.Histories)
                {
                    <tr>
                        <td>@history.Book.Name</td>
                        <td>@history.DateTime.ToShortDateString()</td>
                        <td>@history.Book.Description.Price руб.</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</section>