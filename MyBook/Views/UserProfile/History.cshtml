<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["History"] - MyBook</title>
</head>
<body>
	 <section class="user_page_upper">
       <div class="lk_out">
            <p>Личный кабинет</p>
            <button class="sign_out">Покинуть страницу</button>
        </div>
       <nav class="user_links_wrapper">
            <ul>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="UserProfile" asp-action="EditProfile">Профиль</a>
                </li>
                 <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="UserProfile" asp-action="History">История</a>
                </li>
                 <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="UserProfile" asp-action="EditSubscription">Подписки</a>
                </li>
                </
            </ul>
        </nav>
    </section>

    <section class="user_page_lower">
        <div class="sub_table">
            <div class="sub_table_wrapper">
                <table>
                    <tr class="title_tr">
                        <td>Название книги</td>
                        <td>Дата скачивания</td>
                        <td>Стоимость</td>
                    </tr>
                    <tr>
                        <td>Хорошая книга</td>
                        <td>13.11.2020</td>
                        <td>100 руб.</td>
                    </tr>
                    <tr>
                        <td>Другая книга</td>
                        <td>13.11.2020</td>
                        <td>300 руб.</td>
                    </tr>
                </table>
            </div>
        </div>
    </section>

</body>
</html>