@model MyBook.Models.BuySubscrViewModel
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Payment"] - MyBook</title>
</head>
<body class="">
    <section class="modal_wrapper">
        <div class="payment_content">
            <form method="post" asp-controller="Subscriptuion" asp-action="PaymentModal">
                <div class="modal_view">
                    <div class="modal_name">
                        <h4>Оплата</h4>
                        <button class="close_modal">
                            <a class="nav-link" asp-area="" asp-controller="Subscription" asp-action="Subscription">
                                <img src="/assets/img/close.svg">
                            </a>
                        </button>
                    </div>
                    <h5>Введите данные карты</h5>
                    <div class="card_info_owner">
                        <div class="payment_card_modal mt-2">
                            <div class="card_information">
                                <div class="form_1">
                                    <label for="cardNum">Номер карты:</label>
                                    <input type="text" id="cardNum" aria-describedby="" class="payCard-form">
                                </div>
                                <div class="form_2">
                                    <label for="dateForm">Месяц/Год:</label>
                                    <input type="text" id="dateForm" aria-describedby="" class="payCard-form">
                                </div>
                            </div>
                            <div class='mt-5 '>
                                <label for="NameForm">Владелец карты:</label>
                                <input type="text" id="NameForm" aria-describedby="" class="payCard-form upper_form">
                            </div>
                        </div>
                        <div class="payment_card_modal_backside ">
                            <div class="first_block"></div>
                            <div class="black_row mb-5"></div>
                            <div class='mt-5 second_block'>
                                <label for="NameForm">CVV2(CVC2)</label>
                                <br />
                                <input type="text" id="NameForm" aria-describedby="" class="payCard-form upper_form">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="payment_btn">
                    <button class="btn-warning" type="submit">Оплатить</button>
                </div>
            </form>
        </div>
    </section>
</body>
</html>