<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyBook</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Work+Sans:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@300&family=Montserrat:ital,wght@0,100;0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@300;400&family=Montserrat:ital,wght@0,100;0,400;0,700;1,400&family=Roboto+Slab:wght@600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/pages.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/book_style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/subscription_style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css">
</head>
<body>
    <header>
        <div class="container">
            <div class="header">
                <div class="row upper">
                    <div class="col-2 logo">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="/assets/img/logo.png" alt="MyBook">
                        </a>
                    </div>
                    <div class="col-10">
                        <nav class="navbar navbar-expand-md">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z" />
                                </svg>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarContent">
                                <ul class="navbar-nav">
                                    <li class="nav-item">

                                        <form asp-controller="Search" asp-action="SearchAll" class="formd-flex">
                                            <input name="SearchString" class="form-control customInput" type="search" placeholder="Книга или автор" aria-label="Search">
                                        </form>
                                    </li>


                                    <li>
                                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                                    </li>
                                    <li>
                                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">О нас</a>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" asp-area="" asp-controller="Home" asp-action="Index" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Подписка
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <a class="dropdown-item" asp-area="" asp-controller="Subscription" asp-action="Subscription">Купить подписку</a>
                                            <a class="dropdown-item" asp-area="" asp-controller="SubscriptionGift" asp-action="SubscriptionGift">Подарить подписку</a>
                                        </div>
                                    </li>
                                    <li class="nav-item">
                                        @if (User.Identity?.IsAuthenticated == true)
                                        {
                                            <a class="nav-link " asp-area="" asp-controller="UserProfile" asp-route-id="@User.Claims.FirstOrDefault()?.Value" asp-action="EditProfile">Личный кабинет</a>
                                        }
                                        else
                                        {
                                            <a class="nav-link " asp-area="" asp-controller="Account" asp-action="Login">Войти</a>
                                        }
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
                <div class="row">
                    <div class="lower_header">
                        <ul class="form-inline col-12">
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Library" asp-action="Index">📖 Библиотека</a>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="FreeBooks" asp-action="FreeBooks">👌 Бесплатные книги</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="TopBooks" asp-action="Index">❤️ Топ книг</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="customHeader container">
            <ul class="searchChoices">
                <h3>Найти: </h3>
                <a asp-controller="Search" asp-action="SearchAll" asp-route-searchString="@ViewData["searchString"]">
                <li class="searchChoice">
                    👌 Все
                </li>
                </a>
                <a asp-controller="Search" asp-action="SearchBooks" asp-route-searchString="@ViewData["searchString"]">
                <li class="searchChoice">
                    📖 Книги
                </li>
                </a>
                <a asp-controller="Search" asp-action="SearchAuthors" asp-route-searchString="@ViewData["searchString"]">
                <li class="searchChoice">
                    🔥 Авторы
                </li>
                </a>
            </ul>
        </div>
    </header>


    <div class="render_content">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="main_footer">
        <div class="container">
            <div class="content_wrapper">
                <div class="row">
                    <div class="col-12">
                        <h4>Служба поддержки</h4>
                        <pre>8 800 333 27 37     support@mybook.ru</pre>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>