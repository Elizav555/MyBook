@model MyBook.Models.Admin.EditAuthorViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["EditAuthor"] - MyBook</title>
</head>
<body class="lock">
    <section class="modal_wrapper">
        <div class="main_content_page">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Редактировать автора</h5>
                    <button class="close_modal">
                        <a class="nav-link" asp-controller="AdminProfile" asp-action="ShowCurrent" asp-route-page="Author">
                            <img src="/assets/img/close.svg">
                        </a>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="EditAuthor" asp-controller="AdminProfile">
                        <div asp-validation-summary="ModelOnly"></div>
                        <input type="hidden" asp-for="AuthorId" id="authorId" />
                        <div class="form-group">
                            <label asp-for="Name" for="nameInput">Имя автора</label>
                            <input asp-for="Name" type="text" class="form-control" id="nameInput" placeholder="Имя">
                            <span asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BirthDate">Дата рождения: </label><br />
                            <input asp-for="BirthDate" class="form-control" type="date" id="datepicker" max="2020-04-30">
                            <span asp-validation-for="BirthDate"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageLink" for="img">Ссылка на изображение</label>
                            <input type="text" asp-for="ImageLink" class="form-control" id="img" placeholder="Ссылка на изображение" />
                            <span asp-validation-for="ImageLink"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
    }
