@model MyBook.Models.Admin.EditSubscrViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["EditSubscription"] - MyBook</title>
</head>
<body class="lock">
    <section class="modal_wrapper">
        <div class="main_content_page">
            <div class="wrapper_modal_content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Редактировать тип подписки</h5>
                    <button class="close_modal">
                            <a class="nav-link" asp-controller="AdminProfile" asp-action="ShowCurrent" asp-route-page="Subscription">
                                <img src="/assets/img/close.svg">
                            </a>
                        </button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-action="EditSubscrType">
                        <input type="hidden" asp-for="TypeId" id="typeId">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="TypeName" for="nameInput">Название подписки</label>
                            <input type="text" asp-for="TypeName" class="form-control" id="nameInput" placeholder="Название">
                            <span asp-validation-for="TypeName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" for="nameInput">Стоимость</label>
                            <input type="text" asp-for="Price" class="form-control" id="priceInput" placeholder="Цена">
                            <span asp-validation-for="Price"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" for="descInput">Описание</label>
                            <textarea type="text" asp-for="Description" class="form-control" id="descInput" placeholder="Описание"></textarea>
                            <span asp-validation-for="Description"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
    }
