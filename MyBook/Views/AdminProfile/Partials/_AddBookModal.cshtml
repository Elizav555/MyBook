@model MyBook.Entities.Book

<div class="modal fade" id="AddBookModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Добавить книгу</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="nameInput">Название книги</label>
                        <input type="text" class="form-control" id="nameInput" placeholder="Book Name">
                    </div>
                    <label for="LanguageRadio">Язык</label>
                    <div id="LanguageRadio">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
                            <label class="form-check-label" for="inlineRadio1">ru</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
                            <label class="form-check-label" for="inlineRadio2">en</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Дата публикации: </label><br/>
                        <input class="form-control" type="date" min="1922-04-01" max="2020-04-30" id="datepicker">
                    </div>
                    <label for="isPaid">Бесплатная ?</label>
                    <div id="isPaid">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="isPaid" id="inlineRadio3" value=@true>
                            <label class="form-check-label" for="inlineRadio1">Да</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="isPaid" id="inlineRadio4" value=@false>
                            <label class="form-check-label" for="inlineRadio2">Нет</label>
                        </div>
                    </div>
                    <label for="forAdult">Только для совершеннолтених ?</label>
                    <div id="forAdult">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="isForAdultRadio" id="inlineRadio5" value=@true>
                            <label class="form-check-label" for="inlineRadio1">Да</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="isForAdultRadio" id="inlineRadio6" value=@false>
                            <label class="form-check-label" for="inlineRadio2">Нет</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="descInput">Описание книги</label>
                        <textarea type="text" class="form-control" id="descInput" placeholder="Описание книги"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="pageCountInput">Количество страниц</label>
                        <input type="number" class="form-control" id="pageCountInput" placeholder="Кол-во страниц"/>
                    </div>
                    <div class="form-group">
                        <label for="priceInput">Цена</label>
                        <textarea type="number" class="form-control" id="priceInput" placeholder="Стоимость"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="pdf">Ссылка на книгу (pdf)</label>
                        <input type="text" class="form-control" id="pdf" placeholder="Ссылка на pdf"/>
                    </div>
                    <div class="form-group">
                        <label for="epub">Ссылка на книгу (epub)</label>
                        <input type="text" class="form-control" id="epub" placeholder="Ссылка на epub"/>
                    </div>
                    <div class="form-group">
                        <label for="img">Ссылка на изображение</label>
                        <input type="text" class="form-control" id="img" placeholder="Ссылка на изображение"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>