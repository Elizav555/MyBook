@model MyBook.Entities.Author

<div class="modal fade" id="AddAuthorModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Добавить автора</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="nameInput">Имя автора</label>
                        <input type="text" class="form-control" id="nameInput" placeholder="Имя">
                    </div>
                    <div class="form-group">
                        <label>Дата рождения: </label><br/>
                        <input class="form-control" type="date" id="datepicker">
                    </div>
                    <div class="form-group">
                        <label for="descInput">Информация об авторе</label>
                        <textarea type="text" class="form-control" id="descInput" placeholder="Информация об авторе"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="img">Ссылка на изображение</label>
                        <input type="text" class="form-control" id="img" placeholder="Ссылка на изображение"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>