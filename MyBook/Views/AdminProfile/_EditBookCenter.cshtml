@model MyBook.Models.Admin.AdminViewModel
<section class="admin_functional container">
    <h2>Изменить информацию о магазине</h2>
    <div class="center_information">
        <div class="sub_table_content_admin container">
            <table class="row col-lg-12 full_size_center">
                <tr class="upper_table_row">
                    <td>Название</td>
                    <td>Адрес</td>
                    <td>Телефоны</td>
                    <td>Описание</td>
                    <td>Действия</td>
                </tr>
                @foreach (var bookCenter in Model.Centers)
                {
                    <tr>
                        <td>@bookCenter.Name</td>
                        <td>@bookCenter.Address</td>
                        <td>
                            <p>@bookCenter.Phone</p>
                        </td>
                        <td>@bookCenter.Description</td>
                        <td>
                            <div class="flex_but">
                                @{
                                    var model = new MyBook.Models.Admin.EditCenterViewModel
                {
                    BookCenterId = bookCenter.BookCenterId,
                    Name = bookCenter.Name,
                    Address = bookCenter.Address,
                    Phone = bookCenter.Phone,
                    Description = bookCenter.Description,
                    Latitude = bookCenter.Latitude.ToString(),
                    Longitude = bookCenter.Longitude.ToString()
                };
                                }
                                <button class="spec_but" type="button" onclick="location.href='@Url.Action("EditBookCenterModal", "AdminProfile",model)'">
                                    Редактировать
                                </button>
                                <button class="spec_but" type="button" onclick="location.href='@Url.Action("Delete", "Modals", new DeleteViewModel{ Id = bookCenter.BookCenterId, ReturnPage="BookCenter"})'">Удалить</button>
                            </div>
                        </td>
                    </tr>
                }
            </table>
            <div class="phone_screen_center">
                @foreach (var bookCenter in Model.Centers)
                {





                    <div class="item_card_center_phone">
                        <h4>Название</h4>
                        <h5>@bookCenter.Name</h5>
                        <h4>Адрес</h4>
                        <h5>@bookCenter.Address</h5>
                        <h4>Телефоны</h4>
                        <p>@bookCenter.Phone</p>
                        <h4>Описание</h4>
                        <h5>@bookCenter.Description</h5>
                        <h4>Действия</h4>
                        <div class="flex_but">
                            @{
                                var model = new MyBook.Models.Admin.EditCenterViewModel
                {
                    BookCenterId = bookCenter.BookCenterId,
                    Name = bookCenter.Name,
                    Address = bookCenter.Address,
                    Phone = bookCenter.Phone,
                    Description = bookCenter.Description
                };
                            }
                            <button class="spec_but" type="button" onclick="location.href='@Url.Action("EditBookCenterModal", "AdminProfile",model)'">
                                Редактировать
                            </button>
                            <button class="spec_but" type="button" onclick="location.href='@Url.Action("Delete", "Modals", new DeleteViewModel{ Id = bookCenter.BookCenterId, ReturnPage="BookCenter"})'">Удалить</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="form-button">
        <button class="btn-warning btn_spec" type="button" onclick="location.href='@Url.Action("AddBookCenterModal", "AdminProfile")'">
            Добавить магазин
        </button>
    </div>
</section>