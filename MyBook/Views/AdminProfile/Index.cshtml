@model MyBook.Models.Admin.AdminViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Admin"] - MyBook</title>
</head>
<body>
    <header>
        <div class="lower_header">
            <div class="wrapper_lower_header">
                <ul>
                    <li>
                        <a id="subscr" @*asp-action="EditSubscription"*@>Управлять подпиской</a>
                    </li>
                    <li>
                        <a id="book" @*asp-action="EditBook"*@>Изменить информацию о книге</a>
                    </li>
                    <li>
                        <a id="author" @*asp-action="EditAuthor"*@>Редактировать информацию об авторе</a>
                    </li>
                    <li>
                        <a id="bookCenter" @*asp-action="EditBookCenter"*@>Изменить информацию о магазине</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <div id="containerAuthor">
        @{
            await Html.RenderPartialAsync("_EditAuthor", Model);
        }
    </div>
    <div id="containerBook">
        @{
            await Html.RenderPartialAsync("_EditBook", Model);
        }
    </div>
    <div id="containerBookCenter">
        @{
            await Html.RenderPartialAsync("_EditBookCenter", Model);
        }
    </div>
    <div id="containerSubscription">
        @{
            await Html.RenderPartialAsync("_EditSubscription", Model);
        }
    </div>
    <div id="containerUser">
        @{
            await Html.RenderPartialAsync("_EditUser", Model);
        }
    </div>
</body>
</html>
@section Scripts
{
<script src="~/js/admin.js"></script>
}