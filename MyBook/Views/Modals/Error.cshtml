@model MyBook.Models.ModalsViewModel
<body class="lock">
    <section class="modal_wrapper">
        <div class="main_content_page">
            <div class="wrapper_modal_content">
                <div class="modal_view">
                    <div class="modal_name mod_form">
                        <h3>Ошибка операции</h3>
                    </div>
                    <div class="d-flex ">
                        <div class="mod_but_form center">
                            @{
                                if (Model.CurrentPage != null)
                                {
                                    <a asp-area="" asp-controller=@Model.ControllerName asp-action=@Model.ActionName asp-route-page=@Model.CurrentPage>
                                        <button class="btn-warning btn_spec">Закрыть</button>
                                    </a>
                                }

                                else if (Model.UserId != null)
                                {
                                    <a asp-area="" asp-controller=@Model.ControllerName asp-action=@Model.ActionName asp-route-id=@Model.UserId>
                                        <button class="btn-warning btn_spec">Закрыть</button>
                                    </a>
                                }
                                else if (Model.BookId != null)
                                {
                                    <a asp-area="" asp-controller=@Model.ControllerName asp-action=@Model.ActionName asp-route-bookId=@Model.BookId>
                                        <button class="btn-warning btn_spec">Закрыть</button>
                                    </a>
                                }
                                else if (Model.AuthorId != null)
                                {
                                    <a asp-area="" asp-controller=@Model.ControllerName asp-action=@Model.ActionName asp-route-authorId=@Model.AuthorId>
                                        <button class="btn-warning btn_spec">Закрыть</button>
                                    </a>
                                }
                                else
                                {
                                    <a asp-area="" asp-controller=@Model.ControllerName asp-action=@Model.ActionName>
                                        <button class="btn-warning btn_spec">Закрыть</button>
                                    </a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
